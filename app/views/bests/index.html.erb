<p id="notice"><%= notice %></p>

<h1>Listing Bests</h1>

<table>
  <thead>
    <tr>
      <th>Worktime</th>
      <th>Workdate</th>
      <th>Date</th>
      <th>Amount</th>
      <th>Interest</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bests.each do |best| %>
      <tr>
        <td><%= best.worktime %></td>
        <td><%= best.workdate %></td>
        <td><%= best.date %></td>
        <td><%= best.amount %></td>
        <td><%= best.interest %></td>
        <td><%= best.image %></td>
        <td><%= link_to 'Show', best %></td>
        <td><%= link_to 'Edit', edit_best_path(best) %></td>
        <td><%= link_to 'Destroy', best, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

